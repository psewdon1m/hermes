# TGCall Environment Configuration
# Copy this file to .env and update with your values

# Application
NODE_ENV=production
DOMAIN=tgcall.us
SERVER_IP=38.180.153.25

# Backend Configuration
PORT=3001
REDIS_URL=redis://redis:6379

# TURN Server Configuration
TURN_SERVER=turn:38.180.153.25:3478
TURN_USERNAME=turnuser
TURN_PASSWORD=turnpass
TURN_REALM=tgcall.us
TURN_EXTERNAL_IP=38.180.153.25

# SSL Configuration (используем существующие сертификаты)
SSL_CERT_PATH=/etc/letsencrypt/live/tgcall.us/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/tgcall.us/privkey.pem

# Security
JWT_SECRET=your-super-secret-jwt-key-here
SESSION_SECRET=your-super-secret-session-key-here

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/tgcall.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Call Configuration
CALL_TIMEOUT_MINUTES=60
MAX_PARTICIPANTS_PER_CALL=2

# Nginx Configuration
NGINX_HTTP_PORT=8080
NGINX_HTTPS_PORT=8443
