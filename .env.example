# TGCall configuration example

# Application
NODE_ENV=production
DOMAIN=example.com
SERVER_IP=203.0.113.10

# Backend
API_ORIGIN=https://example.com
WS_PUBLIC=wss://example.com/ws
REDIS_URL=redis://redis:6379
JWT_SECRET=change-me
TURN_SECRET=change-me
TURN_DOMAIN=example.com
TURN_TTL_SECONDS=600
JOIN_TOKEN_TTL_SECONDS=86400
SIGNAL_PATH=/ws

# TURN credentials for basic auth (optional when using TURN_SECRET)
TURN_USERNAME=turnuser
TURN_PASSWORD=turnpass
TURN_REALM=example.com
TURN_EXTERNAL_IP=203.0.113.10

# Rate/Call limits
CALL_TIMEOUT_MINUTES=60
MAX_PEERS_PER_CALL=2
INACTIVE_TTL_SECONDS=3600

# Service ports
FRONTEND_PORT=3000
API_PORT=3001
SIGNAL_PORT=3002
REDIS_PORT=6379
TURN_UDP_PORT=3478
TURN_TLS_PORT=5349
NGINX_HTTP_PORT=8080
NGINX_HTTPS_PORT=8443

# Paths to TLS certificates mounted into containers
SSL_CERT_PATH=/etc/letsencrypt/live/example.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/example.com/privkey.pem